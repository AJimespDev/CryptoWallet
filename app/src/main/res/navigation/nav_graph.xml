<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.antonioje.cryptowallet.splash.SplashFragment"
        android:label="@string/splashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>


    <fragment
        android:id="@+id/signInFragment"
        android:name="com.antonioje.cryptowallet.login.ui.SignInFragment"
        android:label="@string/signInFragment"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.antonioje.cryptowallet.register.ui.SignUpFragment"
        android:label="@string/signUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.antonioje.cryptowallet.home.ui.HomeFragment"
        android:label="@string/homeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/favoriteListFragment"
        android:name="com.antonioje.cryptowallet.home.ui.FavoriteListFragment"
        android:label="@string/favoritosFragment"
        tools:layout="@layout/fragment_favorite_list" />

    <fragment
        android:id="@+id/buscarFragment"
        android:name="com.antonioje.cryptowallet.home.ui.BuscarFragment"
        android:label="@string/buscarFragment"
        tools:layout="@layout/fragment_buscar" />

    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.antonioje.cryptowallet.home.ui.PortfolioFragment"
        android:label="@string/portfolioFragment"
        tools:layout="@layout/fragment_portfolio" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.antonioje.cryptowallet.home.ui.SettingsFragment"
        android:label="@string/settingsFragment"
        tools:layout="@layout/fragment_settings" />

</navigation>